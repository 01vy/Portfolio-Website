---
import { FaExternalLinkAlt } from 'react-icons/fa';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image?: string;
  technologies: string[];
  link: string;
}

const { title, description, image, technologies, link } = Astro.props;

const imageSrc = image || 'data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCA0MDAgMzAwIiBzdHlsZT0iYmFja2dyb3VuZC1jb2xvcjojMjIyOyI+CiAgPHRleHQgeD0iNTAlIiB5PSI1MCUiIGZvbnQtc2l6ZT0iMjAiIGZpbGw9IiNmZmYiIHRleHQtYW5jaG9yPSJtaWRkbGUiPk5vIEltYWdlPC90ZXh0Pgo8L3N2Zz4=';
---

<article class="project-card">
  <div class="project-image-container">
    <Image 
      src={imageSrc}
      alt={`Screenshot of ${title} project`} 
      width={400}
      height={300}
      loading="eager"
    />
    <div class="project-overlay">
      <a 
        href={link || '#'} 
        class="project-link" 
        target="_blank" 
        rel="noopener noreferrer"
        aria-label={`View ${title} project`}
      >
        <FaExternalLinkAlt />
      </a>
    </div>
  </div>
  <div class="project-content">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="technologies">
      {technologies.map(tech => (
        <span class="tech-badge">{tech}</span>
      ))}
    </div>
  </div>
</article>

<style>
  /* ... existing styles ... */
</style>
